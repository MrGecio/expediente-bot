name: Ejecutar script diariamente

# Se ejecuta a diario a las 9 AM hora CDMX (UTC-6)
on:
  schedule:
    - cron: "0 15 * * *"  # UTC: 15 = 9 AM CDMX

jobs:
  run-python:
    runs-on: ubuntu-latest

    steps:
      # Paso 1: Clonar el repositorio
      - uses: actions/checkout@v3

      # Paso 2: Configurar Python
      - name: Configurar Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      # Paso 3: Instalar dependencias
      - name: Instalar dependencias
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      # Paso 4: Configurar credenciales de Google
      - name: Configurar credenciales
        run: echo "${{ secrets.GOOGLE_CREDENTIALS }}" > credentials.json

      # Paso 5: Ejecutar el script
      - name: Ejecutar script
        env:
          GMAIL_USER: ${{ secrets.GMAIL_USER }}
          GMAIL_APP_PASSWORD: ${{ secrets.GMAIL_APP_PASSWORD }}
          TO_EMAIL: ${{ secrets.TO_EMAIL }}
          SPREADSHEET_ID: ${{ secrets.SPREADSHEET_ID }}
        run: python expediente.py
