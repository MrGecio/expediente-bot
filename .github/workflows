name: Ejecutar script diariamente

on:
  schedule:
    - cron: "0 15 * * *"  # UTC: 9 AM CDMX

jobs:
  run-python:
    runs-on: ubuntu-latest
    steps:
      # 1️⃣ Clonar el repositorio
      - uses: actions/checkout@v3

      # 2️⃣ Configurar Python
      - name: Configurar Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      # 3️⃣ Instalar dependencias
      - name: Instalar dependencias
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      # 4️⃣ Configurar credenciales de Google
      - name: Configurar credenciales
        run: |
          echo "${{ secrets.GOOGLE_CREDENTIALS }}" > credentials.json

      # 5️⃣ Configurar secretos del correo
      - name: Configurar variables de correo
        run: |
          echo "GMAIL_USER=${{ secrets.GMAIL_USER }}" >> $GITHUB_ENV
          echo "GMAIL_APP_PASSWORD=${{ secrets.GMAIL_APP_PASSWORD }}" >> $GITHUB_ENV
          echo "TO_EMAIL=${{ secrets.TO_EMAIL }}" >> $GITHUB_ENV

      # 6️⃣ Ejecutar script
      - name: Ejecutar script
        run: python expediente.py
